{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/vendors"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules"
  ]
}
